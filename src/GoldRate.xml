<Ui xmlns="http://www.blizzard.com/wow/ui/"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">

	<Frame name="GoldRate_Frame" frameStrata="BACKGROUND" toplevel="false" enableMouse="false" movable="false" parent="UIParent">
		<Scripts>
			<OnLoad>
				GoldRate.OnLoad();
			</OnLoad>
			<OnUpdate>
				GoldRate.OnUpdate(arg1);
			</OnUpdate>
			<OnEvent>
				GoldRate[event](self, ...)
			</OnEvent>
		</Scripts>
	</Frame>
	<Frame name="GoldRate_Display" frameStrata="BACKGROUND" toplevel="false" parent="UIParent">
		<Size>
			<AbsDimension x="300" y="12"/>
		</Size>
		<Anchors>
			<Anchor point="TOPLEFT" relativeTo="ChatFrame1" relativePoint="BOTTOMLEFT">
				<Offset>
					<AbsDimension x="0" y="-5"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture setAllPoints="true">
					<Color r="0.5" g="0.0" b="0.0" a="1" />
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<FontString name="GoldRate_Display_String" inherits="GameFontWhiteSmall">
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="0" y="-5"></AbsDimension>
							</Offset>
						</Anchor>
					</Anchors>
					<FontHeight>
						<AbsValue val="10"/>
					</FontHeight>
					<Script>
						<OnLoad>
							GoldRate_Display:SetFrameLevel( 3 );
						</OnLoad>
					</Script>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<StatusBar name="GoldRate_Display_Bar0" inherits="TextStatusBar">
				<Size>
					<AbsDimension x="300" y="12"/>
				</Size>
				<Anchors>
						<Anchor point="TOPLEFT"/>
				</Anchors>
				<Scripts>
					<OnLoad>
						GoldRate_Display:SetFrameLevel( 0 );  <!-- background? -->
					</OnLoad>
				</Scripts>
				<BarTexture file="Interface\TargetingFrame\UI-StatusBar"/>
				<BarColor r="0" g="1" b="0"/> <!-- Green -->
			</StatusBar>
			<StatusBar name="GoldRate_Display_Bar1" inherits="TextStatusBar">
				<Size>
					<AbsDimension x="300" y="12"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT"/>
				</Anchors>
				<Scripts>
					<OnLoad>
						GoldRate_Display:SetFrameLevel( 1 );
					</OnLoad>
				</Scripts>
				<BarTexture file="Interface\TargetingFrame\UI-StatusBar"/>
				<BarColor r="1" g="0" b="0"/>
			</StatusBar>
		</Frames>
		<Scripts>
			<OnLoad>self:Hide()</OnLoad>
			<OnUpdate>GoldRateUI.OnUpdate(arg1)</OnUpdate>
		</Scripts>
	</Frame>
</Ui>
