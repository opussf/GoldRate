<Ui xmlns="http://www.blizzard.com/wow/ui/"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">

	<Frame name="GoldRate_Frame" frameStrata="BACKGROUND" toplevel="false" enableMouse="false" movable="false" parent="UIParent">
		<Scripts>
			<OnLoad>
				GoldRate.OnLoad();
			</OnLoad>
			<OnUpdate>
				GoldRate.OnUpdate(arg1);
			</OnUpdate>
			<OnEvent>
				GoldRate[event](self, ...)
			</OnEvent>
		</Scripts>
	</Frame>
	<Frame name="GoldRate_Display" frameStrata="BACKGROUND" toplevel="true" enableMouse="false" movable="false" parent="UIParent">
		<Size>
			<AbsDimenstion x="300" y="12"/>
		</Size>
		<Anchors>
			<Anchor point="TOPLEFT" relativeTo="ChatFrame1" relativePoint="BOTTOMLEFT">
				<Offset>
					<AbsDimension x="0" y="-5"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Frames>
			<StatusBar name="GoldRate_Bar1" inherits="TextStatusBar">
				<Size>
					<AbsDimension x="300" y="12"/>
				</Size>
				<BarTexture file="Interface\TargetingFrame\UI-StatusBar" />
				<BarColor r="0.0" g="0.3" b="0.9" />
				<Anchors>
					<Anchor point="TOPLEFT" />
				</Anchors>
				<Layers>
					<Layer level="LOW">
						<FontString name="GoldRate_Bar1Text" inherits="GameFontNormal" wraponspace="false">
							<Anchors>
								<Anchor point="CENTER"/>
							</Anchors>
							<Color r="1" g="1" b="1"/>
						</FontString>
					</Layer>
				</Layers>
			</StatusBar>
		</Frames>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture setAllPoints="true">
					<Color r="0.5" g="0.0" b="0.0" a="1" />
				</Texture>
			</Layer>
		</Layers>
		<Scripts>
			<OnUpdate>
				GoldRateUI.OnUpdate(arg1);
			</OnUpdate>
		</Scripts>
	</Frame>
</Ui>
